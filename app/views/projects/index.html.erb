<div class ="container">

<% @projects.each do |project| %>

<p id="notice"><%= notice %></p>
		<div class="row">
			<br>
	    <div class="profile span3 offset2" width= "170" height= "200" >
				<br>
				<br>
				<br>
				<br>
		<%= image_tag project.avatar(:small) %>
	    </div>
		<div class="profile span8" width= "500" height= "200" >
			<h3><%= project.project_title %></h3>
			<br>
			<%= raw simple_format(project.project_summary) %>  
			<br>
			<%= link_to 'See Project Details', project %>	
	    </div>		  
	</div>
<% end %>
</div>

